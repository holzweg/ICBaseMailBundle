<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Process Services: Mail Composer -->
        <service id="base.mail.service.composer" class="IC\Bundle\Base\MailBundle\Service\ComposerService">
            <call method="setDefaultSenderName">
                <argument>%base.mail.parameter.composer.default_sender.name%</argument>
            </call>
            <call method="setDefaultSenderAddress">
                <argument>%base.mail.parameter.composer.default_sender.address%</argument>
            </call>
        </service>

        <!-- Process Services: Mail Sender -->
        <service id="base.mail.service.sender" class="IC\Bundle\Base\MailBundle\Service\SenderService">
            <call method="setMailer">
                <argument type="service" id="mailer"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Process Services: Mail Bouncer -->
        <service id="base.mail.service.bounce_mail" class="IC\Bundle\Base\MailBundle\Service\BounceMailService">
            <call method="setBoundeMailHandler">
                <argument type="service" id="base.mail.service.bounce_mail_handler"/>
            </call>
        </service>

        <!-- Process Services: Mail Bouncer Handler -->
        <service id="base.mail.service.bounce_mail_handler" class="BounceMailHandler\BounceMailHandler">
            <property name="mailhost">%base.mail.parameter.mail_bounce.mailhost%</property>
            <property name="port">%base.mail.parameter.mail_bounce.port%</property>
            <property name="mailbox_username">%base.mail.parameter.mail_bounce.username%</property>
            <property name="mailbox_password">%base.mail.parameter.mail_bounce.password%</property>
            <property name="service">%base.mail.parameter.mail_bounce.service%</property>
            <property name="service_option">%base.mail.parameter.mail_bounce.option%</property>
            <property name="boxname">%base.mail.parameter.mail_bounce.mailbox%</property>
        </service>

    </services>

</container>
